{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022", "DOM", "DOM.Iterable"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    // The typescript compiler (tsc) will not emit external ".map" files
    // alonside compiled ".js"
    "sourceMap": false,
    // Will not embed source maps inside the output ".js" as a base64 data: URL
    "inlineSourceMap": false,
    "types": ["jest", "@testing-library/jest-dom"],
    "paths": {
      "@app/shared": ["../../shared/src/index.ts"],
      "@app/shared/*": ["../../shared/src/*"]
    }
  },
  "include": [
    "src",
    "src/types/dialog.d.ts",
    "setupTests.ts",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}

# ---------- Build stage ----------
FROM node:22-alpine3.22 AS builder
WORKDIR /workspace

# 1. Copy manifests first for caching
COPY package.json package-lock.json ./
COPY apps/web/package.json apps/web/package.json

# Install all workspaces (root + web)
RUN npm ci --workspaces --include-workspace-root

# Copy the source
COPY . .

# Build the web app
WORKDIR /workspace/apps/web
RUN npm run build

# ---------- Runtime stage ----------
FROM nginx:1.27.4-alpine AS runtime

# Pull patched base libs in the final image
RUN apk -U --no-cache upgrade

# Replace default nginx site with our config
RUN rm -f /etc/nginx/conf.d/default.conf
COPY apps/web/nginx.conf /etc/nginx/conf.d/web.conf

# Copy built app SPA to nginxâ€™s html dir
COPY --from=builder /workspace/apps/web/dist/ /usr/share/nginx/html/

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]

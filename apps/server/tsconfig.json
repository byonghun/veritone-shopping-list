{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // Emits modern JS module syntax (import & export). Doesn't transform to CommonJS
    // Benefits:
    // - Fits with our modern Node.js runtime
    // - Better tree-shaking in bundlers
    // - Fewer legacy interop edge cases
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "es2022",
    "rootDir": ".",
    "outDir": "dist",
    "types": ["node", "jest"],
    "paths": {
      "@app/shared": ["../../shared/src/index"],
      "@app/shared/*": ["../../shared/src/*"]
    }
  },
  "references": [{ "path": "../../shared" }],
  "include": ["src", "tests", "prisma/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
